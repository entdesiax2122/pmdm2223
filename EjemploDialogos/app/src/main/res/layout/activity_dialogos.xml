<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".actividades.DialogosActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textAlignment="center"
        android:text="@string/msg" />

    <Button
        android:id="@+id/btnSimpleInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:text="@string/simple_info" />

    <Button
        android:id="@+id/btnSimpleInfoOkBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/simple_info_ok_btn"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnOkCancelDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/ok_cancel_dialog"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spDeptos"
        android:layout_width="300dp"
        android:layout_height="80dp" />

    <Button
        android:id="@+id/btSelecDepto"
        android:text="Cargar"
        android:textSize="24sp"
        android:layout_width="300dp"
        android:layout_height="60dp" />

    <TextView
        android:id="@+id/tvInfoDepto"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="prueba"
        android:textSize="26sp"/>

</LinearLayout>